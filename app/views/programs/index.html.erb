<% if current_user.admin? %>
    <div class="header">
        <h2>
            Departments
        </h2>
    </div>
    <div class="body table-responsive">
      <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.name %></td>
        <td><%= program.code %></td>
        <td>
          <%= link_to 'Edit', edit_program_path(program), class: 'btn btn-primary' %> |
          <%= link_to 'Delete', program, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Program', new_program_path, class: 'btn btn-primary' %>
</div>