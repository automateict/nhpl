<p id="notice"><%= notice %></p>

<% if current_user.admin? %>
    <div class="header">
        <h2>
            Applicants
        </h2>
    </div>
      <div class=" body table-responsive">
      <table class="table table-bordered table-striped table-hover dataTable js-exportable">
        <thead>
        <tr>
          <th>#</th>
          <th>Applicant</th>
          <th>Subject</th>
          <th>Body</th>
          <th>Status</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
          <% counter = 1 %>
            <% unless @applicants.blank? %>
              <% @appeals.each do |appeal| %>
                <tr>
                  <td><%= counter %></td>
                  <td><%= appeal.applicant %></td>
                  <td><%= appeal.subject %></td>
                  <td><%= appeal.body %></td>
                  <td><%= appeal.status %></td>
                  <td><%= link_to 'Show', appeal %> </td>
                </tr>
                <% counter += 1 %>
              <% end %>
            <% end %>
        </tbody>
      </table>
    </div>
<% end %>