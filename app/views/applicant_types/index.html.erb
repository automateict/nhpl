<p id="notice"><%= notice %></p>

<h1>Applicant Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applicant_types.each do |applicant_type| %>
      <tr>
        <td><%= applicant_type.name %></td>
        <td><%= applicant_type.description %></td>
        <td><%= link_to 'Show', applicant_type %></td>
        <td><%= link_to 'Edit', edit_applicant_type_path(applicant_type) %></td>
        <td><%= link_to 'Destroy', applicant_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

