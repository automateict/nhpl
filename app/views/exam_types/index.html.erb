<p id="notice"><%= notice %></p>

<h1>Exam Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exam_types.each do |exam_type| %>
      <tr>
        <td><%= exam_type.name %></td>
        <td><%= exam_type.description %></td>
        <td><%= link_to 'Show', exam_type %></td>
        <td><%= link_to 'Edit', edit_exam_type_path(exam_type) %></td>
        <td><%= link_to 'Destroy', exam_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

