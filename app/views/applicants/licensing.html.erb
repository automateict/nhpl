<div class="header">
  <h2>
    Licensed Applicants
  </h2>
</div>
<div class="body table-responsive">
  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Applicant</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Program</th>
      <th>Mark</th>
      <th>Status</th>
      <th>Publish Status</th>
    </tr>
  </thead>

  <tbody>
    <% @pass.each do |applicant| %>
      <tr>
        <td><%= applicant %></td>
        <td><%= applicant.email %></td>
        <td><%= applicant.gender %></td>
        <td><%= applicant.program %></td>
        <td><%= applicant.exam.total rescue nil %></td>
        <td><%= applicant.grading_status %></td>
        <td><%= applicant.license_result.publish_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Publish Result', publish_applicants_path, class: 'btn btn-primary' unless @unpublished.blank? %>
<hr/>

  <div class="header">
    <h2>
      Not Licensed Applicants
    </h2>
  </div>
    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
      <thead>
      <tr>
        <th>Applicant</th>
        <th>Gender</th>
        <th>Email</th>
        <th>Program</th>
        <th>Mark</th>
        <th>Status</th>
        <th>Publish Status</th>
      </tr>
      </thead>

      <tbody>
      <% @fail_or_ungraded.each do |applicant| %>
          <tr>
            <td><%= applicant %></td>
            <td><%= applicant.gender %></td>
            <td><%= applicant.user.email %></td>
            <td><%= applicant.program %></td>
            <td><%= applicant.exam.total rescue nil %></td>
            <td><%= applicant.grading_status %></td>
            <td><%= applicant.license_result.publish_status %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

</div>