<div class="body">
  <h5>Save applicants list in CSV format in the same order as follows:</h5>
<table class="table">
  <tr>
    <th>Registraton ID</th>
    <th>First Name</th>
    <th>Father Name</th>
    <th>Grand Father Name</th>
    <th>Institution</th>
    <th>Profession</th>
    <th>Result</th>
  </tr>
  <tr>
    <td>0001</td>
    <td>AAA</td>
    <td>BBB</td>
    <th>CCC</th>
    <td>Addis Ababa University</td>
    <td>General Medicine</td>
    <td>Pass</td>
  </tr>
</table>

<div class="body">
  <%= simple_form_for :import_applicant, :multipart=>true do |f| %>
      <%= f.input :academic_year, collection: AcademicYear.all %>
      <%= f.input :applicants_csv_file, as: :file %>
    <hr/>
    <%= submit_tag 'Import', class: 'btn btn-primary' %>
  <% end %>
</div>

<% unless @applicants.blank? %>
<div class="header">
  <h2>
    Imported Applicants
  </h2>
</div>
<div class="body table-responsive">
  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
    <thead>
    <tr>
      <th>Registraton ID</th>
      <th>First Name</th>
      <th>Father Name</th>
      <th>Grand Father Name</th>
      <th>Institution</th>
      <th>Profession</th>
      <th>Result</th>
    </tr>
    </thead>

    <tbody>
    <% @applicants.each do |applicant| %>
        <tr>
          <td><%= applicant.application_id %></td>
          <td><%= applicant.first_name %></td>
          <td><%= applicant.father_name %></td>
          <td><%= applicant.grand_father_name %></td>
          <td><%= applicant.university %></td>
          <td><%= applicant.program %></td>
          <td><%= applicant.grading_status %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<% end %>
</div>