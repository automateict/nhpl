<div class="col-sm-6">
<div class="card">
  <div class="body">
    <h2>Check Your MCQ Exam Result</h2>
    <hr/>

      <div class="row clearfix">
        <div class="col-sm-10">
          <div class="row">
            <label class="col-sm-3 col-form-label">ID Number</label>
            <div class="col-sm-9">
              <%= text_field_tag :id_number, nil, class: 'form-control', id: 'exam_result_id_number' %>
            </div>
          </div>

          <div class="row">
            <label class="col-sm-3 col-form-label">First Name</label>
            <div class="col-sm-9">
              <%= text_field_tag :first_name, nil, class: 'form-control', id: 'exam_result_first_name' %>
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <%= submit_tag 'Search', class: 'btn btn-primary', id: 'exam_search_button' %>
        </div>
      </div>

    <div id="exam_result">
      <%= render partial: '/exams/exam_result'  %>
    </div>
  </div>
</div>
</div>
<div class="col-sm-6">
<div class="card">
  <div class="body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="msg">Sign In Form</div>
        <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">email</i>
        </span>
          <div class="form-line">
            <%= f.email_field :email, class: "form-control", placeholder:"Email", required: true, autofocus: true %>
          </div>
        </div>
        <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">lock</i>
        </span>
          <div class="form-line">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-8 p-t-5">
            <%= f.check_box :remember_me, name: "rememberme", id: "rememberme", class: "filled-in chk-col-pink" %>
            <label for="rememberme">Remember Me</label>
          </div>
          <div class="col-xs-4">
            <%= f.submit "SIGN IN",class: "btn btn-block bg-pink waves-effect"  %>
          </div>
        </div>
    <% end %>
    <div class="row m-t-15 m-b--20">
      <div class="col-xs-6 align-right">
        <%= link_to "Forgot Password?", new_user_password_path %>
      </div>
    </div>
  </div>
</div>
</div>